{
  "manifest_version": 2,
  "name": "Multi Dictionary",
  "description": "Spell check against multiple languages using this addon",
  "homepage_url": "https://github.com/GrayedFox/multi-dict",
  "version": "1.0.0",
  "icons": {
    "48": "icons/icon-64.png",
    "96": "icons/icon-128.png"
  },

  "background": {
    "scripts": ["dist/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "css": ["src/deps/highlight/highlight.css"]
    }
  ],

  "web_accessible_resources": ["dictionaries/*.aff, dictionaries/*.dic"]
}
